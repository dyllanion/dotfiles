# vim: ft=dosini

[global]
    font = Hack 10
    allow_markup = yes

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    # Markup is allowed
    format = "<b>%s</b>\n%b"

    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = o
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no

    geometry = "650x5-20+45"
    shrink = no

    transparency = 0
    idle_threshold = 0
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = yes

    line_height = 0
    separator_height = 2
    padding = 14
    horizontal_padding = 12
    separator_color = frame

    # Print a notification on startup.
    # This is mainly for error detection, since dbus (re-)starts dunst
    # automatically after a crash.
    startup_notification = false

    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening urls in context menu.
    browser = /usr/bin/chromium

    icon_position = right
    icon_folders = /usr/share/icons/Paper/32x32@2x/actions/:/usr/share/icons/Paper/32x32@2x/apps/:/usr/share/icons/Paper/32x32@2x/categories/:/usr/share/icons/Paper/32x32@2x/devices/:/usr/share/icons/Paper/32x32@2x/emblems/:/usr/share/icons/Paper/32x32@2x/emotes/:/usr/share/icons/Paper/32x32@2x/mimetypes/:/usr/share/icons/Paper/32x32@2x/places/:/usr/share/icons/Paper/32x32@2x/status/:/usr/share/icons/Paper/32x32@2x/web/

[frame]
    width = 6
    color = "#ebdbb2"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 10

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 10

[urgency_critical]
    background = "#cc241d"
    foreground = "#ebdbb2"
    timeout = 0
