Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb

! rofi
rofi.modi: run
rofi.font: Hack 12
rofi.width: 60
rofi.lines: 8
rofi.columns: 1
!                    bg       fg      altbg    hlbg     hlfg
rofi.color-normal: #262626, #ebdbb2, #262626, #ebdbb2, #262626
rofi.color-urgent: #262626, #ebdbb2, #262626, #ebdbb2, #262626
rofi.color-active: #262626, #ebdbb2, #262626, #ebdbb2, #262626
rofi.color-window: #262626, #ebdbb2, #ebdbb2
rofi.bw: 2
! location: 1 2 3 / 8 0 4 / 7 6 5
rofi.location: 0
rofi.padding: 10
rofi.fuzzy: true
rofi.separator-style: solid
rofi.hide-scrollbar: true

! === gruvbox color scheme ===
*background: #1d2021
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
